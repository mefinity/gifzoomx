{
  "manifest_version": 2,
  "name": "GIF Zoom for Twitter",
  "version": "1.4",
  "description": "Click GIFs on Twitter to maximize and Zoom.",
  "permissions": ["https://video.twimg.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["gif.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["gif.worker.js"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{3989421b-3f48-41db-8746-1dbbcb5819a4}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  }
}
